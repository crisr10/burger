<h1>Eat tha burger </h1>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/index" method="POST">

  <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" id="input" name="burger_name">
  </div>

  <button type="submit">Submit</button>
</form>

<h2>Burgers</h2>
<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">DEVOUR!</button>
        </form>

      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Devoured</h2>
<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
        </form>

      </li>
    {{/unless}}
  {{/each}}
</ul>

